<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp5"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:src="@drawable/ic_home" />

            <LinearLayout
                android:id="@+id/payment_method_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dp5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.laundry.CustomTextRegular.CustomTextRegulars
                        android:id="@+id/address_tittle_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="HOME"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/address_status_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />


                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginLeft="@dimen/dp25"
                        android:buttonTint="@color/sky_blue" />


                </LinearLayout>


                <com.laundry.CustomTextRegular.Regular
                    android:id="@+id/address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Noida sector 63 E- 144 "
                    android:textSize="@dimen/text11" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp5">

                    <com.laundry.CustomTextRegular.CustomTextRegulars
                        android:id="@+id/edit_btn_tv"
                        android:layout_width="@dimen/dp80"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/background_button_sky"
                        android:gravity="center"
                        android:padding="@dimen/dp6"
                        android:text="Edit"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_12" />


                    <com.laundry.CustomTextRegular.CustomTextRegulars
                        android:id="@+id/delete_btn_tv"
                        android:layout_width="@dimen/dp80"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/background_button_black"
                        android:gravity="center"
                        android:padding="@dimen/dp6"
                        android:text="Delete"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_12" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/view_3" />

    </LinearLayout>

</layout>