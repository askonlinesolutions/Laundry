<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:orientation="vertical"
        android:padding="@dimen/dp5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
           >


            <com.laundry.CustomTextRegular.CustomTextRegulars
                android:id="@+id/offer_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DRY566"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/offer_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/sky_blue"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="@dimen/dp2">

            <com.laundry.CustomTextRegular.CustomTextRegulars
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer Code:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12" />

            <com.laundry.CustomTextRegular.CustomTextRegulars
                android:id="@+id/offer_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:text="holi123"
                android:textSize="@dimen/text_12" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp2">

            <com.laundry.CustomTextRegular.CustomTextRegulars
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valid From:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12" />

            <com.laundry.CustomTextRegular.CustomTextRegulars
                android:id="@+id/offer_from_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_weight="1"
                android:text="12/32/1111"
                android:textSize="@dimen/text_12" />

            <com.laundry.CustomTextRegular.CustomTextRegulars
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:text="To:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12" />

            <com.laundry.CustomTextRegular.CustomTextRegulars
                android:id="@+id/offer_to_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:text="12/32/1111"
                android:textSize="@dimen/text_12" />


        </LinearLayout>

        <com.laundry.CustomTextRegular.CustomTextRegulars
            android:id="@+id/msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp2"
            android:text="12/32/1111"
            android:textSize="@dimen/text_12" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/bg_color_2" />
    </LinearLayout>
</layout>