<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.MyPayment.PaymentMethodActivity">

        <com.laundry.CustomTextRegular.CustomTextRegular
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/sky_blue"
            android:drawableLeft="@drawable/ic_left_arrow"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="Payment Method"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_15" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dp3">

            <com.laundry.CustomTextRegular.CustomTextRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:padding="@dimen/dp15"
                android:text="MANAGE CARD"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/pament_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <com.laundry.CustomTextRegular.CustomTextRegular
            android:id="@+id/activity_add_new_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/background_button_sky"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Add new card"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_13" />

    </LinearLayout>

</layout>