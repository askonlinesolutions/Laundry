<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.laundry.DryCleaner.DryCleanerActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="250dp">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


           <TextView
                android:id="@+id/myImageViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cloth"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="130dp"
                android:text="DRY CLEANING \nSERVICES "
                android:textColor="@color/white_color"
                android:textSize="25dp"
                android:textStyle="bold" />

            <com.laundry.CustomTextRegular.Regular
                android:id="@+id/cleaning_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cloth"
                android:layout_below="@id/myImageViewText"
                android:layout_marginLeft="10dp"
                android:text=" profession laundry and Dry Cleaning \n services "
                android:textColor="@color/white_color"
                android:textSize="10dp" />


            <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                android:id="@+id/dots_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="100dp"
                app:dampingRatio="0.5"
                app:dotsColor="@color/sky_blue"
                app:dotsCornerRadius="8dp"
                app:dotsSize="16dp"
                app:dotsSpacing="6dp"
                app:dotsStrokeColor="@color/bg_color_2"
                app:dotsStrokeWidth="2dp"
                app:stiffness="300" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/services"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.laundry.CustomTextRegular.Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Select Services"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/schedule_pickup_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_grybackground"
            android:gravity="center"
            android:padding="5dp">

            <com.laundry.CustomTextRegular.Regular
                android:id="@+id/open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Schedule pickup"
                android:textColor="@color/white_color"
                android:textSize="9sp" />


        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height=".3dp"
        android:background="@color/view_color" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/press_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


    <View
        android:layout_width=".3dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        android:background="@color/view_color" />


</LinearLayout>

    <!--</LinearLayout>-->

