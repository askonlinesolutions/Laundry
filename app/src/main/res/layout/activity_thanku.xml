<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.ThankuActivity">

        <TextView
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/sky_blue"
            android:drawableLeft="@drawable/ic_left_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/white_color"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/card_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/circlesky_background"
            android:elevation="5dp"
            android:layout_marginTop="@dimen/dp120"
            android:padding="@dimen/dp10"

            android:src="@drawable/ic_check_mark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Thank You"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="You have succesful credit card" />

    </LinearLayout>
</layout>