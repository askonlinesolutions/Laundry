<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.manageAddress.ManageAddressActivity">

        <com.laundry.CustomTextRegular.CustomTextRegulars
            android:id="@+id/manage_back_tv"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/sky_blue"
            android:drawableLeft="@drawable/ic_left_arrow"
            android:drawablePadding="100dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Manage Address"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_15" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/manage_address_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/add_new_address_tv"
            android:layout_below="@+id/manage_back_tv"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10">

        </android.support.v7.widget.RecyclerView>


        <com.laundry.CustomTextRegular.CustomTextRegulars
            android:id="@+id/add_new_address_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginBottom="17dp"
            android:background="@drawable/background_button_sky"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Add New Address"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_15" />


    </RelativeLayout>

</layout>