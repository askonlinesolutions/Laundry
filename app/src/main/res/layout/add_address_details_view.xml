<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@color/dialog_quote_sorry"
    android:orientation="vertical"
    android:padding="5dp">

    <com.laundry.CustomTextRegular.CustomTextRegulars
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:text="Location"
        android:textColor="@color/text_black" />

    <com.laundry.CustomTextRegular.CustomTextRegulars
        android:id="@+id/activity_add_aaddres_txtLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_11" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_1" />

    <com.laundry.CustomTextRegular.CustomTextRegulars

        android:id="@+id/add_address_edtHouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:hint="House/Flat no"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textColorHint="@color/text_black"
        android:textSize="@dimen/text_11" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFEFEDED" />

    <com.laundry.CustomTextRegular.CustomTextRegulars

        android:id="@+id/add_address_edtLandMark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:hint="Landmark"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textColorHint="@color/text_black"
        android:textSize="@dimen/text_11" />

</LinearLayout>