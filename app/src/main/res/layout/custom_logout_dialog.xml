<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/card_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/circlesky_background"
        android:elevation="5dp"
        android:padding="@dimen/dp10"
        android:src="@drawable/ic_credit_card" />

    <ImageView
        android:id="@+id/close_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:elevation="5dp"
        android:src="@drawable/ic_x_blue_button" />

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:elevation="3dp"
        android:orientation="horizontal"
        app:cardCornerRadius="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.laundry.CustomTextRegular.Regular
                android:id="@+id/otp_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp40"
                android:gravity="center"
                android:text="Are you sure you want to logout"
                android:textSize="@dimen/text_12"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.laundry.CustomTextRegular.Regular
                    android:id="@+id/playnowbtn"
                    android:layout_width="@dimen/dp90"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_button_sky"
                    android:gravity="center"
                    android:text="Yes"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_12" />

                <com.laundry.CustomTextRegular.Regular
                    android:id="@+id/cancel_btn"
                    android:layout_width="@dimen/dp90"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:text="No"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>