<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MyPayment.PaymentActivity">

    <com.laundry.CustomTextRegular.CustomTextRegulars
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/sky_blue"
        android:drawableLeft="@drawable/ic_left_arrow"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:text="Payment"
        android:textColor="@color/white_color"
        android:textSize="15dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.laundry.CustomTextRegular.CustomTextRegulars
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="Choose Payment Method"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/sky_blue"
                    android:padding="10dp"
                    android:text="Pay Pal" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/sky_blue"
                    android:padding="10dp"
                    android:text="Credit Card" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/sky_blue"
                    android:padding="10dp"
                    android:text="COD" />
            </RadioGroup>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.laundry.CustomTextRegular.CustomTextRegulars
        android:id="@+id/activity_place_order_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_button_sky"
        android:gravity="center"
        android:text="Place Order"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_14" />


</LinearLayout>