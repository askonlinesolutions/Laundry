<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.Contact.ContactActivity">

        <LinearLayout
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sky_blue"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp15">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp15"
                android:src="@drawable/ic_left_arrow" />

            <com.laundry.CustomTextRegular.CustomTextRegular
                android:id="@+id/login_title_contact"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/dp10"
                android:text="Contact us"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_15"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/sky_blue"
            android:orientation="vertical">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:padding="@dimen/dp20"
                android:scaleType="fitXY"

                android:src="@drawable/ic_contact" />
        </LinearLayout>

        <com.laundry.CustomTextRegular.CustomTextRegular
            android:id="@+id/location_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_loction_black"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="@dimen/dp20"
            android:text="E-38 MNH technoogu Noida sector 63  \n Uttar pradash 201312"
            android:textSize="@dimen/text_12" />

        <com.laundry.CustomTextRegular.CustomTextRegular
            android:id="@+id/contact_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:drawableLeft="@drawable/ic_phone_black_call"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="@dimen/dp20"
            android:text="+91-9837705552"
            android:textSize="@dimen/text_12" />

        <com.laundry.CustomTextRegular.Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@color/sky_blue"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp15">

            <ImageView
                android:id="@+id/call_iv"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_telephone" />

            <com.laundry.CustomTextRegular.CustomTextRegular
                android:id="@+id/txt_call"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center"
                android:paddingLeft="@dimen/dp10"
                android:text="Contact us"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_14" />


        </LinearLayout>


    </LinearLayout>

</layout>