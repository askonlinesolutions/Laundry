<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.laundry.ui.LoginScreen.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:orientation="vertical">

        <com.laundry.CustomTextRegular.CustomTextRegular
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/sky_blue"
            android:drawableLeft="@drawable/ic_left_arrow"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="Sign up"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_15" />

        <LinearLayout
            android:id="@+id/order_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/order_image"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="1dp"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/sky_blue"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="11dp"
                    android:text="Sign up"
                    android:textColor="@color/white_color" />

                <RadioButton
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="11dp"
                    android:text="Log in" />


            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/corner"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/activity_login_email_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_close_envelope" />

                <EditText
                    android:id="@+id/activity_login_edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/activity_login_email_icon"
                    android:background="@null"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:lineSpacingExtra="7dp"
                    android:padding="4dp"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/corner"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/activity_login_password_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_house_key" />

                <EditText
                    android:id="@+id/activity_login_edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/activity_login_password_icon"
                    android:background="@null"
                    android:hint="Passward"
                    android:inputType="textPassword"
                    android:lineSpacingExtra="7dp"
                    android:maxLength="8"
                    android:padding="4dp"
                    android:textSize="12dp" />


            </LinearLayout>

            <com.laundry.CustomTextRegular.CustomTextRegular
                android:id="@+id/activity_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:text="Forgot Passward ?"
                android:textSize="12sp" />

            <com.laundry.CustomTextRegular.CustomTextRegular
                android:id="@+id/activity_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp45"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/background_button_sky"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="Log In"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_14" />

            <com.laundry.CustomTextRegular.CustomTextRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:text="OR"
                android:textSize="20sp" />

            <com.laundry.CustomTextRegular.CustomTextRegular
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp45"
                android:layout_gravity="center"
                android:background="@drawable/background_button_blue"
                android:drawableLeft="@drawable/ic_facebook_letter_logo"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="Facebook"

                android:textColor="@color/white_color"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.laundry.CustomTextRegular.CustomTextRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Skip >>"
                    android:textColor="@color/sky_blue"
                    android:textSize="20dp" />

                <!--<ImageView-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:src="@drawable/ic_right_arrow" />-->

                <!--<ImageView-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/ic_right_arrow" />-->


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/signupbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/corner"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/name_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_user" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/activity_login_email_icon"
                    android:background="@null"
                    android:hint="Name"
                    android:inputType="textEmailAddress"
                    android:lineSpacingExtra="7dp"
                    android:padding="4dp"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/corner"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/email_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_close_envelope" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/activity_login_email_icon"
                    android:background="@null"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:lineSpacingExtra="7dp"
                    android:padding="4dp"
                    android:textSize="@dimen/text_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/corner"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/password_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_house_key" />

                <EditText
                    android:id="@+id/activity_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/activity_login_email_icon"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:lineSpacingExtra="7dp"
                    android:maxLength="20"
                    android:padding="4dp"
                    android:textSize="@dimen/text_12" />

                <ImageView
                    android:id="@+id/eye_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_eye" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/corner"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/confirm_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_house_key" />

                <EditText
                    android:id="@+id/confrim_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/activity_login_email_icon"
                    android:background="@null"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:lineSpacingExtra="7dp"
                    android:maxLength="8"
                    android:padding="4dp"
                    android:textSize="@dimen/text_12" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkbox_termandcondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:buttonTint="@color/sky_blue"
                android:padding="10dp"
                android:text="Term and Condition"
                android:textColor="@color/sky_blue" />

            <com.laundry.CustomTextRegular.CustomTextRegular
                android:id="@+id/activity_sign_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp45"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/background_button_sky"
                android:gravity="center"
                android:paddingLeft="@dimen/dp50"
                android:paddingRight="@dimen/dp50"
                android:text="Sign up"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_14" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
